import React, { useEffect, useState } from "react";
import Product from "../components/Product";
//import HeadComponent from '../components/Head'; //altera칞칚o do c칩digo inicial

import { PublicKey } from '@solana/web3.js';
import { useWallet } from '@solana/wallet-adapter-react';
import { WalletMultiButton } from '@solana/wallet-adapter-react-ui';

// Constantes
const TWITTER_HANDLE = "saudeperfeitasempre";
const TWITTER_LINK = `https://twitter.com/${TWITTER_HANDLE}`;

const App = () => {
  // Tudo que tem aqui n칚o tinha no c칩digo inicial
  // Isso buscar치 a chave p칰blica dos usu치rios (endere칞o da carteira) de qualquer carteira que suportamos
  const { publicKey } = useWallet(); // o hook useWallet() nos dar치 o endere칞o dos usu치rios conectados em qualquer lugar do aplicativo. ele se inscreve nos provedores que configuramos em app.js
  const [products, setProducts] = useState([]);

  useEffect(() => {
    if (publicKey) {
      fetch(`/api/fetchProducts`)
        .then(response => response.json())
        .then(data => {
          setProducts(data);
          console.log("Products", data);
        });
    }
  }, [publicKey]);

  const renderNotConnectedContainer = () => (
    <div className="button-container">
      <WalletMultiButton className="cta-button connect-wallet-button" />
    </div>
  );


  const renderItemBuyContainer = () => (
    <div className="products-container">
      {products.map((product) => (
        <Product key={product.id} product={product} />
      ))}
    </div>
  );
  
  return (
    <div className="App">
      {/*<HeadComponent/>*/}
      <div className="container">
        <header className="header-container">
          <p className="header"> 游 Pr치ticas de saude e bem-estar 游눩 </p>
          <p className="sub-text">A 칰nica loja artigos pr치ticos de saude que aceita shitcoins</p>
        </header>

        <main>
          {/* N칩s s칩 renderizamos o bot칚o de conex칚o se a chave p칰blica n칚o existir */}
          {publicKey ? renderItemBuyContainer() : renderNotConnectedContainer()}

          {/*<img className='gif-image' src="https://media.tenor.com/1mJ-tJSzvwsAAAAd/solana-sol.gif" alt="emoji" /> //altera칞칚o de c칩digo inicial*/}
          {/*<img className='gif-image' src="https://media.tenor.com/luPX8VOFfXUAAAAM/christmas-holidays.gif" alt="emoji" /> //altera칞칚o de c칩digo inicial*/}
        </main>

        <div className="footer-container">
          <img alt="Twitter Logo" className="twitter-logo" src="twitter-logo.svg" />
          <a
            className="footer-text"
            href={TWITTER_LINK}
            target="_blank"
            rel="noreferrer"
          >{`contruido na @${TWITTER_HANDLE}`}</a>
        </div>
      </div>
    </div>
  );
};

export default App;
